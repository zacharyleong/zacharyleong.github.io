---
import { getCollection } from 'astro:content';
import type { CollectionEntry } from 'astro:content';
import BlogPost from '../../layouts/BlogPost.astro';

export async function getStaticPaths() {
  const blogEntries = await getCollection('blog');
  return blogEntries.map((blogpost) => ({
    params: { slug: blogpost.slug },
    props: { blogpost },
  }));
}

interface Props {
  blogpost: CollectionEntry<'blog'>;
}

const { blogpost } = Astro.props;
const { Content, headings } = await blogpost.render();

// Check if it's an MDX file (MDX files don't have layout in frontmatter)
const isMDX = blogpost.id.endsWith('.mdx');
---

{isMDX ? (
  <BlogPost content={blogpost.data} headings={headings}>
    <Content />
  </BlogPost>
) : (
  <Content />
)}
